@page
@model mission09_rjackso3.Pages.ShoppingCartModel
@{
}

<h2>Your Basket</h2>

<table class="table table-striped table-bordered">

    <thead>
        <tr>
            <th>Book Name</th>
            <th>Quantity</th>
            <th>Cost</th>
            <th>Subtotal</th>
        </tr>
    </thead>

    <tbody>
        @*Makes a table row for each book in the basket with relevant info*@
        @foreach (var i in Model.basket.Items)
        {
            <tr>
                <td>@i.book.Title</td>
                <td>@i.Quantity</td>
                <td>@i.book.Price</td>
                <td>@(i.book.Price * i.Quantity)</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3">Total:</td>
            <td>@Model.basket.CalculateTotal().ToString("c")</td>
        </tr>
    </tfoot>

</table>

<div>
    <a class="btn btn-primary" href="@Model.ReturnUrl">Return to Shopping</a>
</div>
