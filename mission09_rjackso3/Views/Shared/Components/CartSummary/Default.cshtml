@{
}
@model Basket
<div class="">
    @*Checks to make sure there are items in the cart before calculating the total*@
    @if (Model.Items.Count() >0) {
        <small class="navbar-text">
            <b>Your Cart:</b>
            @Model.Items.Sum(x=>x.Quantity) item(s)
            @Model.CalculateTotal().ToString("c")
        </small>
    }
    <a class="btn btn-sm btn-secondary navbar-btn" asp-page="/ShoppingCart" asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()">
        <i class="fa fa-shopping-cart"></i>
    </a>

</div>