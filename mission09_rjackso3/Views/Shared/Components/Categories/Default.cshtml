@{
}

@model IEnumerable<string>

 @*Creates a button for each category and lets you filter by it. Also highlights the curently selected filter button*@
<div class="d-grid gap-2">
    <a asp-controller="Home" asp-action="Index" asp-route-category="" asp-route-pageNum="1" class="btn @(ViewBag.SelectedCategory == null ? "btn-primary": "btn-outline-secondary")">Home</a>
    <br />
    @foreach (string b in Model)
        {
            <div class="mt-1">
            <a asp-controller="Home" asp-aciton="Index" asp-route-category="@b" asp-route-pageNum="1" class="btn @(ViewBag.SelectedCategory == b ? "btn-primary": "btn-outline-secondary")">@b</a>
            </div>
        }

</div>